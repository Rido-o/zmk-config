#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    combos {
        compatible = "zmk,combos";

        bluetooth {
            bindings = <&mo 3>;
            key-positions = <41 36>;
        };

        bt2 {
            bindings = <&mo 3>;
            key-positions = <48 53>;
        };
    };

    behaviors {
        hml: hml {
            compatible = "zmk,behavior-hold-tap";
            label = "HOME_ROW_LEFT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 42 43 44 45 46 47>;
            tapping-term-ms = <180>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            hold-trigger-on-release;
        };

        hmr: hmr {
            compatible = "zmk,behavior-hold-tap";
            label = "HOME_ROW_RIGHT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <180>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41>;
            hold-trigger-on-release;
        };
    };

    macros {
        ScreenshotAreaClipboard: ScreenshotAreaClipboard {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(LC(LS(NUMBER_4)))>;
            label = "SCREENSHOTAREACLIPBOARD";
        };

        ScreenshotAreaFile: ScreenshotAreaFile {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(LS(NUMBER_4))>;
            label = "SCREENSHOTAREAFILE";
        };

        ScreenRecord: ScreenRecord {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LG(LS(N5))>;
            label = "SCREENRECORD";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  ESC |  1  |  2  |  3  |  4  |  5  |   |  6  |  7   |  8  |  9  |  0  |  ?   |
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp GRAVE  &kp N1  &kp N2            &kp N3            &lt 3 NUMBER_4       &kp N5           &kp N6       &kp N7                &kp N8            &kp N9            &kp N0            &kp BSPC
&tog 1     &kp Q   &kp W             &kp E             &kp R                &kp T            &kp Y        &kp U                 &kp I             &kp O             &kp P             &kp ENTER
&tog 2     &kp A   &hml RIGHT_ALT S  &hml LEFT_GUI D   &hml LEFT_SHIFT F    &kp G            &kp H        &hmr RIGHT_SHIFT J    &hmr RIGHT_GUI K  &hmr RIGHT_ALT L  &mt RSHIFT SEMI   &mt RSHIFT SQT
&tog 3     &kp Z   &kp X             &kp C             &hml LEFT_CONTROL V  &kp B            &kp N        &hmr RIGHT_CONTROL M  &kp COMMA         &kp DOT           &mt RSHIFT SLASH  &mt RIGHT_SHIFT BSLH
                                     &mt LEFT_ALT ESC  &mt RIGHT_GUI SPACE  &mt LCTRL TAB    &lt 3 ENTER  &lt 1 SPACE           &lt 2 BACKSPACE
            >;
        };

        layer_1 {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &trans        &trans        &trans        &trans        &trans           &trans        &trans     &trans     &trans     &trans    &trans
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp N5           &kp NUMBER_6  &kp N7     &kp N8     &kp N9     &kp N0    &trans
&trans  &trans        &trans        &trans        &trans        &trans           &trans        &kp MINUS  &kp EQUAL  &kp GRAVE  &kp SEMI  &trans
&trans  &trans        &trans        &trans        &trans        &trans           &kp UNDER     &kp PLUS   &kp LBKT   &kp RBKT   &kp PIPE  &kp TILDE
                                    &trans        &trans        &kp BACKSPACE    &trans        &trans     &trans
            >;
        };

        layer_2 {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  F1 |  F2 |  F3 |  F4 |  F5 |   |  F6 |  F7 |  F8 |  F9 | F10 | BKSP |
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &kp F1           &kp F2       &kp F3          &kp F4            &kp F5         &kp F6                &kp F7                &kp F8             &kp F9                &kp F10                &kp F11
&trans  &kp EXCLAMATION  &kp AT_SIGN  &kp HASH        &kp DOLLAR        &kp PERCENT    &kp CARET             &kp AMPERSAND         &kp STAR           &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp F12
&trans  &trans           &trans       &trans          &trans            &trans         &kp LEFT              &kp DOWN              &kp UP             &kp RIGHT             &trans                 &trans
&trans  &kp GRAVE        &kp EQUAL    &kp C_PREVIOUS  &kp C_PLAY_PAUSE  &kp C_NEXT     &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC  &kp C_VOLUME_DOWN  &kp C_VOLUME_UP       &kp BSLH               &trans
                                      &trans          &trans            &trans         &trans                &trans                &trans
            >;
        };

        bluetooth {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2    &bt BT_SEL 3    &trans           &bt BT_CLR    &trans  &trans  &trans  &trans  &trans  &bootloader
&trans        &trans        &mkp LCLK       &mmv MOVE_UP    &mkp RCLK        &trans        &trans  &trans  &trans  &trans  &trans  &trans
&bootloader   &trans        &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans        &trans  &trans  &trans  &trans  &trans  &trans
&trans        &trans        &trans          &trans          &trans           &trans        &trans  &trans  &trans  &trans  &trans  &trans
                                            &trans          &trans           &trans        &trans  &trans  &trans
            >;
        };

        Macros {
            bindings = <
&trans  &ScreenshotAreaClipboard  &ScreenshotAreaFile  &ScreenRecord   &trans           &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans                    &mkp LCLK            &mmv MOVE_UP    &mkp RCLK        &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans                    &mmv MOVE_LEFT       &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &trans    &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans                    &trans               &trans          &trans           &trans    &trans  &trans  &trans  &trans  &trans  &trans
                                                       &trans          &trans           &trans    &trans  &trans  &trans
            >;
        };
    };
};
